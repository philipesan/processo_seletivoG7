<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-0 bg-secondary">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Grupo 7", "Index", null, htmlAttributes: new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            <div class="navbar-nav">
                @Html.ActionLink("Contatos", "Contact", null, htmlAttributes: new { @class = "nav-item nav-link" })
            </div>
        </div>
    </nav>
    <div class="container body-content mt-3 bg-light rounded p-2">
        @RenderBody()
        <hr />
        <footer class="mb-1">
            <p>&copy; @DateTime.Now.Year - Feito Por Victor P. A. Smirnov</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/JavaScript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
